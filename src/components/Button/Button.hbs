<button
  class="button button__{{variant}}{{#if disabled}} disabled{{/if}}{{#if withIcon}} button__with-icon{{/if}}"
  {{#if id}} id="{{id}}" {{/if}}
  {{#if name}} name="{{name}}" {{/if}}
  {{#if value}} value="{{value}}" {{/if}}
  {{#if type}} type="{{type}}" {{/if}}
  {{#if width}}
    style="width: {{width}}px"
  {{/if}}
>
  {{#if startIconSrc}}
    <img class="button__img" src="{{startIconSrc}}" />
  {{/if}}
  <span class="button__text">{{text}}</span>
  {{#if endIconSrc}}
    <img class="button__img" src="{{endIconSrc}}" />
  {{/if}}
</button>
