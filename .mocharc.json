{
  "$schema": "https://json.schemastore.org/mocharc",
  "diff": true,
  "extension": ["js", "ts"],
  "package": "./package.json",
  "loader": "ts-node/register",
  "reporter": "spec",
  "require": ["./mochaSetup.js"],
  "recursive": true,
  "slow": 75,
  "timeout": 60000,
  "ui": "bdd",
  "watch-files": ["src/**/*.test.js", "src/**/*.test.ts", "test/**/*.ts"],
  "spec": ["test/**/*.test.js", "src/**/*.test.ts"]
}
